    <script>
        // Toggle user dropdown menu
        function toggleUserMenu() {
            const menu = document.getElementById('userDropdownMenu');
            menu.classList.toggle('show');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.querySelector('.user-dropdown');
            const menu = document.getElementById('userDropdownMenu');
            
            if (dropdown && !dropdown.contains(event.target)) {
                menu.classList.remove('show');
            }
        });

        // Toggle FAQ items
        function toggleFAQ(question) {
            const answer = question.nextElementSibling;
            const allAnswers = document.querySelectorAll('.faq-answer');
            const allQuestions = document.querySelectorAll('.faq-question');
            
            // Close all other FAQ items
            allAnswers.forEach((item, index) => {
                if (item !== answer) {
                    item.classList.remove('active');
                    allQuestions[index].style.background = '#f8f9ff';
                }
            });
            
            // Toggle current FAQ item
            answer.classList.toggle('active');
            if (answer.classList.contains('active')) {
                question.style.background = '#eef1ff';
            } else {
                question.style.background = '#f8f9ff';
            }
        }

        // Handle contact form submission
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const formData = new FormData(this);
            
            // Convert FormData to JSON
            const data = {};
            formData.forEach((value, key) => {
                data[key] = value;
            });
            
            // Disable submit button
            submitBtn.disabled = true;
            submitBtn.innerHTML = '‚è≥ ƒêang g·ª≠i...';
            
            // Send form data
            fetch('/contact', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    showNotification('Tin nh·∫Øn ƒë√£ ƒë∆∞·ª£c g·ª≠i th√†nh c√¥ng! Ch√∫ng t√¥i s·∫Ω ph·∫£n h·ªìi s·ªõm nh·∫•t c√≥ th·ªÉ.', 'success');
                    this.reset(); // Clear form
                } else {
                    showNotification(result.message || 'C√≥ l·ªói x·∫£y ra khi g·ª≠i tin nh·∫Øn. Vui l√≤ng th·ª≠ l·∫°i.', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('C√≥ l·ªói x·∫£y ra khi g·ª≠i tin nh·∫Øn. Vui l√≤ng th·ª≠ l·∫°i.', 'error');
            })
            .finally(() => {
                // Re-enable submit button
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'üì§ G·ª≠i Tin Nh·∫Øn';
            });
        });

        // Show notification function
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `flash-message ${type}`;
            notification.innerHTML = `${type === 'success' ? '‚úÖ' : '‚ùå'} ${message}`;
            
            const container = document.querySelector('.flash-messages');
            if (container) {
                container.appendChild(notification);
            } else {
                const newContainer = document.createElement('div');
                newContainer.className = 'flash-messages';
                newContainer.appendChild(notification);
                document.body.appendChild(newContainer);
            }
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                notification.remove();
            }, 5000);
        }

        // Auto-hide flash messages
        document.addEventListener('DOMContentLoaded', function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(message => {
                setTimeout(() => {
                    message.style.animation = 'slideIn 0.3s ease reverse';
                    setTimeout(() => {
                        message.remove();
                    }, 300);
                }, 5000);
            });
        });
