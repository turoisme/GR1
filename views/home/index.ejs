                <button class="modal-close" onclick="closeProductModal()">&times;</button>
            </div>
            
            <div class="product-preview">
                <div class="product-preview-image" id="modalProductImage">👟</div>
                <div class="product-preview-info">
                    <div class="product-preview-name" id="modalProductName">Tên sản phẩm</div>
                    <div class="product-preview-price" id="modalProductPrice">0đ</div>
                </div>
            </div>
            
            <!-- ✅ Dynamic color options based on product -->
            <div class="modal-option" id="colorSection">
                <label>Màu sắc <span class="required-star">*</span></label>
