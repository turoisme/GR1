            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(102, 126, 234, 0.05) 0%, transparent 50%);
            animation: float 10s ease-in-out infinite;
        }
        
        @keyframes float {
