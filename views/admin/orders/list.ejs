                </div>
            </div>
        </header>

        <!-- Content -->
        <div class="content">
            <!-- Action Buttons -->
            <div class="action-buttons">
                <button class="btn btn-primary" onclick="refreshOrders()">
                    <i class="fas fa-sync"></i>
                    Làm mới
                </button>
                <button class="btn btn-secondary" onclick="exportOrders()">
                    <i class="fas fa-download"></i>
                    Xuất Excel
                </button>
                <button class="btn btn-warning" onclick="bulkUpdateStatus()">
                    <i class="fas fa-edit"></i>
                    Cập nhật hàng loạt
                </button>
            </div>

            <!-- Filters -->
            <div class="filters">
                <div class="filter-group">
                    <label>Trạng thái:</label>
                    <select id="statusFilter" onchange="filterOrders()">
                        <option value="">Tất cả</option>
                        <option value="pending">Chờ xử lý</option>
                        <option value="processing">Đang xử lý</option>
                        <option value="shipped">Đã gửi</option>
                        <option value="delivered">Đã giao</option>
                        <option value="cancelled">Đã hủy</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Từ ngày:</label>
                    <input type="date" id="fromDate" onchange="filterOrders()">
                </div>
                <div class="filter-group">
                    <label>Đến ngày:</label>
                    <input type="date" id="toDate" onchange="filterOrders()">
                </div>
                <div class="filter-group">
                    <label>Giá trị từ:</label>
                    <input type="number" id="minAmount" placeholder="0" onchange="filterOrders()">
                </div>
                <div class="filter-group">
                    <label>đến:</label>
                    <input type="number" id="maxAmount" placeholder="999999" onchange="filterOrders()">
                </div>
                <button class="btn btn-secondary btn-sm" onclick="clearFilters()">
                    <i class="fas fa-times"></i>
                    Xóa bộ lọc
                </button>
            </div>

            <!-- Orders Table -->
            <div class="orders-table">
                <div class="table-header">
                    <h3>Danh sách đơn hàng</h3>
                    <div class="table-controls">
                        <div class="search-box">
                            <input type="text" id="searchInput" placeholder="Tìm kiếm đơn hàng..." onkeyup="searchOrders()">
                            <i class="fas fa-search"></i>
                        </div>
                        <select id="itemsPerPage" onchange="changeItemsPerPage()">
                            <option value="10">10 / trang</option>
                            <option value="25" selected>25 / trang</option>
                            <option value="50">50 / trang</option>
                            <option value="100">100 / trang</option>
                        </select>
                    </div>
                </div>

                <div class="table-container">
                    <table id="ordersTable">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll" onchange="toggleSelectAll()">
                                </th>
                                <th>Mã đơn hàng</th>
                                <th>Khách hàng</th>
                                <th>Sản phẩm</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Ngày đặt</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="ordersTableBody">
                            <!-- Sample data -->
                            <tr>
                                <td><input type="checkbox" class="order-checkbox" value="1"></td>
                                <td>
                                    <div class="order-info">
                                        <div class="order-details">
                                            <h4>#ORD-001</h4>
                                            <p>ID: 67890</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>Nguyễn Văn A</strong><br>
                                        <small>nguyenvana@email.com</small>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>3 sản phẩm</strong><br>
                                        <small>Giày Nike, Áo Adidas...</small>
                                    </div>
                                </td>
                                <td>
                                    <strong>2.450.000₫</strong>
                                </td>
                                <td>
                                    <span class="status-badge status-processing">Đang xử lý</span>
                                </td>
                                <td>15/01/2024</td>
                                <td>
                                    <div class="action-buttons-cell">
                                        <button class="btn btn-sm btn-primary" onclick="viewOrder(1)" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-success" onclick="updateOrderStatus(1)" title="Cập nhật">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="cancelOrder(1)" title="Hủy đơn">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" class="order-checkbox" value="2"></td>
                                <td>
                                    <div class="order-info">
                                        <div class="order-details">
                                            <h4>#ORD-002</h4>
                                            <p>ID: 67891</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>Trần Thị B</strong><br>
                                        <small>tranthib@email.com</small>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>2 sản phẩm</strong><br>
                                        <small>Quần Under Armour...</small>
                                    </div>
                                </td>
                                <td>
                                    <strong>1.800.000₫</strong>
                                </td>
                                <td>
                                    <span class="status-badge status-shipped">Đã gửi</span>
                                </td>
                                <td>14/01/2024</td>
                                <td>
                                    <div class="action-buttons-cell">
                                        <button class="btn btn-sm btn-primary" onclick="viewOrder(2)" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-success" onclick="updateOrderStatus(2)" title="Cập nhật">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="cancelOrder(2)" title="Hủy đơn">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination">
                    <button class="pagination-btn" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="pagination-btn active">1</button>
                    <button class="pagination-btn">2</button>
                    <button class="pagination-btn">3</button>
                    <button class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </button>
