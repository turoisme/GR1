                    });
                    
                    loadProducts();
                    showNotification(`ƒê√£ t·∫£i ${products.length} s·∫£n ph·∫©m t·ª´ database`, 'success');
                } else {
                    throw new Error(data.message || 'Kh√¥ng th·ªÉ t·∫£i s·∫£n ph·∫©m');
                }
                
            } catch (error) {
                console.error('‚ùå Error loading products:', error);
                showNotification('L·ªói khi t·∫£i s·∫£n ph·∫©m: ' + error.message, 'error');
                
                // Show error state
                const tableBody = document.getElementById('productsTableBody');
