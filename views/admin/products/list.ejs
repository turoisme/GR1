            color: white;
            transform: translateX(5px);
        }

        .menu-item a.active {
            background: rgba(255,255,255,0.2);
            color: white;
        }

        .menu-item a.active::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: white;
        }

        .menu-item i {
