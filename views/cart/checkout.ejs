                    e.preventDefault();
                    e.returnValue = 'B·∫°n c√≥ ch·∫Øc mu·ªën r·ªùi kh·ªèi trang? Th√¥ng tin ƒë√£ nh·∫≠p s·∫Ω b·ªã m·∫•t.';
                }
            });
            
            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                // Ctrl/Cmd + Enter to submit form
                if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
