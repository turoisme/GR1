            // Form validation
            function validateForm() {
                const requiredFields = form.querySelectorAll('input[required], select[required], textarea[required]');
                let isValid = true;
                
                requiredFields.forEach(field => {
                    const errorMsg = field.parentNode.querySelector('.error-message');
                    
                    if (!field.value.trim()) {
