                    <select id="sort" onchange="filterProducts()">
                        <option value="name-asc" <%= (typeof filters !== 'undefined' && filters.sortBy === 'name-asc') ? 'selected' : '' %>>T√™n A-Z</option>
                        <option value="name-desc" <%= (typeof filters !== 'undefined' && filters.sortBy === 'name-desc') ? 'selected' : '' %>>T√™n Z-A</option>
                        <option value="price-asc" <%= (typeof filters !== 'undefined' && filters.sortBy === 'price-asc') ? 'selected' : '' %>>Gi√° th·∫•p ƒë·∫øn cao</option>
                        <option value="price-desc" <%= (typeof filters !== 'undefined' && filters.sortBy === 'price-desc') ? 'selected' : '' %>>Gi√° cao ƒë·∫øn th·∫•p</option>
                    </select>
                </div>
            </div>
        </section>

        <section class="products-section">
            <div class="products-header">
                <div class="products-count">
                    <% if (typeof products !== 'undefined') { %>
                        Hi·ªÉn th·ªã <%= products.length %> s·∫£n ph·∫©m
                        <% if (typeof pagination !== 'undefined' && pagination.totalProducts) { %>
                            (t·ªïng <%= pagination.totalProducts %> s·∫£n ph·∫©m)
                        <% } %>
                    <% } %>
                </div>
            </div>
            
            <div class="products-grid">
                <% if (typeof products !== 'undefined' && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="product-card">
                            <div class="product-image"><%= product.image %></div>
                            <div class="product-info">
                                <div class="product-brand"><%= product.brand %></div>
                                <h3 class="product-name"><%= product.name %></h3>
                                <p class="product-description"><%= product.description.substring(0, 80) %>...</p>
                                <p class="product-price"><%= product.getFormattedPrice() %></p>
                                <div class="product-actions">
                                    <button class="add-to-cart" onclick="addToCart(<%= product.id %>)">
                                        Th√™m v√†o gi·ªè
                                    </button>
                                    <a href="/products/<%= product.id %>" class="view-detail">
