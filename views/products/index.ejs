    <script>
        // Track selections for each product
        let productSelections = {};

        function initializeProduct(productId) {
            if (!productSelections[productId]) {
                productSelections[productId] = {
                    color: null,
                    size: null,
                    quantity: 1
                };
            }
        }

        function selectColor(productId, color, element) {
            initializeProduct(productId);
            
            // Remove previous selection for this product
            const productCard = element.closest('.product-card');
            const colorOptions = productCard.querySelectorAll('.color-option');
            colorOptions.forEach(option => option.classList.remove('selected'));
            
            // Select current color
            element.classList.add('selected');
            productSelections[productId].color = color;
            
            // Clear validation message
            clearValidationMessage(productId);
        }

        function selectSize(productId, size, element) {
            initializeProduct(productId);
            
            // Remove previous selection for this product
            const productCard = element.closest('.product-card');
            const sizeOptions = productCard.querySelectorAll('.size-option');
            sizeOptions.forEach(option => option.classList.remove('selected'));
            
            // Select current size
            element.classList.add('selected');
            productSelections[productId].size = size;
            
            // Clear validation message
            clearValidationMessage(productId);
        }

        function changeQuantity(productId, delta) {
            initializeProduct(productId);
            
            let quantity = productSelections[productId].quantity + delta;
            if (quantity < 1) quantity = 1;
            if (quantity > 10) quantity = 10;
            
            productSelections[productId].quantity = quantity;
            document.getElementById(`quantity-${productId}`).textContent = quantity;
        }

        function addToCart(productId) {
            <% if (typeof user !== 'undefined' && user) { %>
                // User đã đăng nhập - thực hiện thêm vào giỏ
                initializeProduct(productId);
                
                const selection = productSelections[productId];
                
                // Validate selections
                if (!selection.color) {
                    showValidationMessage(productId, 'Vui lòng chọn màu sắc');
                    return;
                }
                
                if (!selection.size) {
                    showValidationMessage(productId, 'Vui lòng chọn kích thước');
                    return;
                }
                
                // Disable button
                const button = document.getElementById(`add-btn-${productId}`);
                button.disabled = true;
                button.innerHTML = '⏳ Đang thêm...';
                
                // Send request
                fetch('/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        productId: productId,
                        quantity: selection.quantity,
                        color: selection.color,
                        size: selection.size
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Đã thêm sản phẩm vào giỏ hàng!', 'success');
                        updateCartCount(data.data?.cartItemCount || 0);
                        
                        // Reset selections
                        resetProductSelections(productId);
                    } else {
                        showNotification(data.message || 'Có lỗi xảy ra', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Có lỗi xảy ra khi thêm sản phẩm', 'error');
                })
                .finally(() => {
                    // Re-enable button
                    button.disabled = false;
                    button.innerHTML = '🛒 Thêm vào giỏ hàng';
                });
            <% } else { %>
                // User chưa đăng nhập - chuyển đến trang đăng nhập
                if (confirm('Bạn cần đăng nhập để thêm sản phẩm vào giỏ hàng. Chuyển đến trang đăng nhập?')) {
                    window.location.href = '/auth/login';
                }
            <% } %>
        }

        function resetProductSelections(productId) {
            const productCard = document.querySelector(`[data-product="${productId}"]`);
            
            // Reset color selection
            const colorOptions = productCard.querySelectorAll('.color-option');
            colorOptions.forEach(option => option.classList.remove('selected'));
            
            // Reset size selection
            const sizeOptions = productCard.querySelectorAll('.size-option');
            sizeOptions.forEach(option => option.classList.remove('selected'));
            
            // Reset quantity
            document.getElementById(`quantity-${productId}`).textContent = '1';
            
            // Clear selections
            productSelections[productId] = {
                color: null,
                size: null,
                quantity: 1
            };
            
            // Clear validation message
            clearValidationMessage(productId);
        }

        function showValidationMessage(productId, message) {
            const messageElement = document.getElementById(`validation-${productId}`);
            messageElement.textContent = message;
            messageElement.style.display = 'block';
        }

        function clearValidationMessage(productId) {
            const messageElement = document.getElementById(`validation-${productId}`);
            messageElement.style.display = 'none';
        }

        // Toggle user dropdown menu
        function toggleUserMenu() {
            const menu = document.getElementById('userDropdownMenu');
            menu.classList.toggle('show');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.querySelector('.user-dropdown');
            const menu = document.getElementById('userDropdownMenu');
            
            if (dropdown && !dropdown.contains(event.target)) {
                menu.classList.remove('show');
            }
        });

        // Show notification
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `flash-message ${type}`;
            notification.innerHTML = `${type === 'success' ? '✅' : '❌'} ${message}`;
            
            let container = document.querySelector('.flash-messages');
            if (!container) {
                container = document.createElement('div');
                container.className = 'flash-messages';
                document.body.appendChild(container);
            }
            
            container.appendChild(notification);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }

        // Update cart count
        function updateCartCount(count) {
            const cartBtn = document.querySelector('.cart-btn');
            if (cartBtn) {
                cartBtn.innerHTML = `🛒 Giỏ hàng (${count})`;
            }
        }

        // Filter products
        function filterProducts() {
            const category = document.getElementById('category').value;
            const brand = document.getElementById('brand').value;
            const sort = document.getElementById('sort').value;
            
            const params = new URLSearchParams();
            if (category) params.append('category', category);
            if (brand) params.append('brand', brand);
            if (sort) params.append('sort', sort);
            
            window.location.href = '/products?' + params.toString();
        }

        // Auto-hide flash messages
        document.addEventListener('DOMContentLoaded', function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(message => {
                setTimeout(() => {
                    if (message.parentNode) {
                        message.style.animation = 'slideIn 0.3s ease reverse';
                        setTimeout(() => {
                            if (message.parentNode) {
                                message.parentNode.removeChild(message);
                            }
                        }, 300);
                    }
                }, 5000);
            });
        });
    </script>
</body>
