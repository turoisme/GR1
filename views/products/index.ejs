            <% if (typeof pagination !== 'undefined' && pagination.totalPages > 1) { %>
                <div class="pagination">
                    <% if (pagination.hasPrev) { %>
                        <a href="?page=<%= pagination.prevPage %><%= typeof filters !== 'undefined' ? '&category=' + (filters.category || '') + '&brand=' + (filters.brand || '') + '&sort=' + (filters.sortBy || '') : '' %>">
