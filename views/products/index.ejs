                            <a href="?page=<%= i %><%= typeof filters !== 'undefined' ? '&category=' + (filters.category || '') + '&brand=' + (filters.brand || '') + '&sort=' + (filters.sortBy || '') : '' %>">
                                <%= i %>
                            </a>
                        <% } %>
                    <% } %>
                    
                    <% if (pagination.hasNext) { %>
                        <a href="?page=<%= pagination.nextPage %><%= typeof filters !== 'undefined' ? '&category=' + (filters.category || '') + '&brand=' + (filters.brand || '') + '&sort=' + (filters.sortBy || '') : '' %>">
