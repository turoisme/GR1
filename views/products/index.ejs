                <div class="filter-group">
                    <label for="brand">Th∆∞∆°ng hi·ªáu:</label>
                    <select id="brand" onchange="filterProducts()">
                        <option value="">T·∫•t c·∫£ th∆∞∆°ng hi·ªáu</option>
                        <% if (typeof brands !== 'undefined') { %>
                            <% brands.forEach(brand => { %>
