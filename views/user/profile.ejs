            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .avatar-email {
            color: #666;
            font-size: 0.9rem;
        }
        
        /* Password Change */
        .password-section {
            background: rgba(252, 248, 227, 0.8);
            padding: 30px;
            border-radius: 15px;
            border: 2px solid #f39c12;
        }
        
        /* Notification */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            padding: 15px 25px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            transform: translateX(400px);
            transition: transform 0.3s ease;
