            <!-- Orders Filters -->
            <div class="orders-filters">
                <select class="filter-select" id="statusFilter" onchange="filterOrders()">
                    <option value="">T·∫•t c·∫£ tr·∫°ng th√°i</option>
                    <option value="pending">Ch·ªù x·ª≠ l√Ω</option>
