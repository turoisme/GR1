        }

        .order-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .item-image {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid #e9ecef;
        }

        .item-details {
            flex: 1;
        }

        .item-name {
            font-weight: 600;
            color: #495057;
            margin-bottom: 5px;
        }

        .item-variant {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        .item-price {
