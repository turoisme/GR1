            font-weight: bold;
            font-size: 1.1rem;
            padding-top: 15px;
            border-top: 2px solid #dee2e6;
            color: #dc3545;
        }

        .order-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
