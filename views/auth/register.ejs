    <script>
        // Password strength checker
        function checkPasswordStrength(password) {
            const strengthElement = document.getElementById('passwordStrength');
            const strengthText = strengthElement.querySelector('.strength-text');
            
            let score = 0;
            let feedback = '';
            
            if (password.length >= 6) score++;
            if (password.length >= 8) score++;
            if (/[A-Z]/.test(password)) score++;
            if (/[a-z]/.test(password)) score++;
            if (/[0-9]/.test(password)) score++;
            if (/[^A-Za-z0-9]/.test(password)) score++;
            
            strengthElement.className = 'password-strength';
            
            if (score < 3) {
                strengthElement.classList.add('strength-weak');
                feedback = 'M·∫≠t kh·∫©u y·∫øu';
            } else if (score < 5) {
                strengthElement.classList.add('strength-medium');
                feedback = 'M·∫≠t kh·∫©u trung b√¨nh';
            } else {
                strengthElement.classList.add('strength-strong');
                feedback = 'M·∫≠t kh·∫©u m·∫°nh';
            }
            
            strengthText.textContent = feedback;
        }
        
        // Password input listener
        document.getElementById('password').addEventListener('input', function() {
            checkPasswordStrength(this.value);
            checkPasswordMatch();
        });
        
        // Confirm password listener
        document.getElementById('confirmPassword').addEventListener('input', checkPasswordMatch);
        
        function checkPasswordMatch() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const confirmInput = document.getElementById('confirmPassword');
            
            if (confirmPassword && password !== confirmPassword) {
                confirmInput.classList.add('error');
            } else {
                confirmInput.classList.remove('error');
            }
        }
        
        // Toggle password visibility
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const toggleBtn = input.nextElementSibling;
            
            if (input.type === 'password') {
                input.type = 'text';
                toggleBtn.textContent = 'üôà';
            } else {
                input.type = 'password';
                toggleBtn.textContent = 'üëÅÔ∏è';
            }
        }
        
        // Form submission
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const registerBtn = document.getElementById('registerBtn');
            const firstName = document.getElementById('firstName').value.trim();
            const lastName = document.getElementById('lastName').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const agreeTerms = document.getElementById('agreeTerms').checked;
            
            // Validation
            const errors = [];
            
            if (!firstName || firstName.length < 2) {
                errors.push('H·ªç ph·∫£i c√≥ √≠t nh·∫•t 2 k√Ω t·ª±');
            }
            
            if (!lastName || lastName.length < 2) {
                errors.push('T√™n ph·∫£i c√≥ √≠t nh·∫•t 2 k√Ω t·ª±');
            }
            
            if (!email || !isValidEmail(email)) {
                errors.push('Email kh√¥ng h·ª£p l·ªá');
            }
            
            if (!password || password.length < 6) {
                errors.push('M·∫≠t kh·∫©u ph·∫£i c√≥ √≠t nh·∫•t 6 k√Ω t·ª±');
            }
            
            if (password !== confirmPassword) {
                errors.push('M·∫≠t kh·∫©u x√°c nh·∫≠n kh√¥ng kh·ªõp');
            }
            
            if (!agreeTerms) {
                errors.push('B·∫°n ph·∫£i ƒë·ªìng √Ω v·ªõi ƒëi·ªÅu kho·∫£n s·ª≠ d·ª•ng');
            }
            
            if (errors.length > 0) {
                e.preventDefault();
                showAlert(errors.join('; '), 'error');
                return;
            }
            
            // Show loading state
            registerBtn.classList.add('loading');
            registerBtn.disabled = true;
        });
        
        // Email validation
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
        
        // Show alert message
        function showAlert(message, type = 'error') {
            const existingAlerts = document.querySelectorAll('.alert');
            existingAlerts.forEach(alert => alert.remove());
            
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.innerHTML = type === 'error' ? `‚ùå ${message}` : `‚úÖ ${message}`;
            
            const logo = document.querySelector('.logo');
            logo.insertAdjacentElement('afterend', alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
        
        // Remove error state on input
        ['firstName', 'lastName', 'email', 'password', 'confirmPassword'].forEach(id => {
            document.getElementById(id).addEventListener('input', function() {
                this.classList.remove('error');
            });
        });
        
        // Auto-focus first input
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('firstName').focus();
        });
        
        // Handle form submission errors
        window.addEventListener('load', function() {
            const registerBtn = document.getElementById('registerBtn');
            registerBtn.classList.remove('loading');
            registerBtn.disabled = false;
        });
    </script>
</body>
